<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= business._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Contact Name"
                    name="contactName" 
                    value="<%= business.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact Number</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the contact number"
                    name="contactNumber" 
                    value="<%= business.contactNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value="<%= business.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Company</label>
                    <input type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the Company Name"
                    name="company"                     
                    value="<%= business.company %>"
                    required
                    >
                    </input>
                </div>

               
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>